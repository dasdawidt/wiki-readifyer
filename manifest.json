{
	"manifest_version": 2,

	"name": "Wiki Readifyer",
	"short_name": "Wiki Readifyer",
	"version": "1.4.1",
	"description": "Makes Wikipedia articles pleasantly readable. Nothing more. Nothing less.",
	"author": "David Maier",

	"incognito": "split",

	"content_scripts": [{
		"js": ["content.js"],
		"matches": ["*://*.wikipedia.org/*"]
		}],
	
	"web_accessible_resources": [
		"styles/style.css"
	],
		
	"background": {
		"scripts": ["background.js"]
	},
	
	"browser_action": {
      "default_icon": {
        "128": "images/128.png",
		"512": "images/512.png"
	  }
    },
	
	"icons": {
		"128": "images/128.png",
		"512": "images/512.png"
    },
	
	"permissions": [
          "storage",
		  "*://*.wikipedia.org/*"
        ]
}